<?xml version="1.0" encoding="UTF-8"?>
<Installer>
    <Name>Unipro UGENE</Name>
    <Version>1.35.0</Version>
    <Title>Unipro UGENE Installer</Title>
    <Publisher>Unipro</Publisher>
    <ProductUrl>http://ugene.net</ProductUrl>
    <StartMenuDir>Unipro UGENE</StartMenuDir>
    <TargetDir>@HomeDir@/UGENE</TargetDir>
    <AdminTargetDir>@HomeDir@/UGENE</AdminTargetDir>
    <AllowSpaceInPath>true</AllowSpaceInPath>
    <AllowNonAsciiCharacters>true</AllowNonAsciiCharacters>
    <InstallActionColumnVisible>true</InstallActionColumnVisible>

    <RunProgram>@TargetDir@/ugene</RunProgram>
    <RunProgramArguments>
        <Argument>-ui</Argument>
    </RunProgramArguments>
    <WizardDefaultWidth>768</WizardDefaultWidth>
    <WizardDefaultHeight>480</WizardDefaultHeight>

    <InstallerWindowIcon>ugene_128.png</InstallerWindowIcon>

    <ControlScript>controller.js</ControlScript>

    <WizardStyle>Modern</WizardStyle>
    <Logo>ugene_logo_installer.png</Logo>

    <MaintenanceToolName>setup</MaintenanceToolName>
    <RemoteRepositories>
        <Repository>
            <Url>http://ugene.net/downloads/repoLin32</Url>
            <Enabled>1</Enabled>
            <DisplayName>UGENE general repository</DisplayName>
        </Repository>
    </RemoteRepositories>
</Installer>
